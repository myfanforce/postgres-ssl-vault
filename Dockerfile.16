ARG POSTGRES_VERSION=16
FROM postgres:${POSTGRES_VERSION}

# Install OpenSSL, sudo, and build dependencies for pgsodium
RUN apt-get update && apt-get install -y \
    openssl \
    sudo \
    postgresql-server-dev-all \
    build-essential \
    git \
    libssl-dev \
    pkg-config \
    libsodium-dev \
    && rm -rf /var/lib/apt/lists/*

# Install pgsodium extension (required for Supabase Vault)
RUN git clone https://github.com/michelp/pgsodium.git /tmp/pgsodium \
    && cd /tmp/pgsodium \
    && make \
    && make install \
    && cd / \
    && rm -rf /tmp/pgsodium

# Install Supabase Vault extension
RUN git clone https://github.com/supabase/vault.git /tmp/supabase-vault \
    && cd /tmp/supabase-vault \
    && make \
    && make install \
    && cd / \
    && rm -rf /tmp/supabase-vault

# Allow the postgres user to execute certain commands as root without a password
RUN echo "postgres ALL=(root) NOPASSWD: /usr/bin/mkdir, /bin/chown, /usr/bin/openssl" > /etc/sudoers.d/postgres

# Add pgsodium key generation script
COPY --chmod=755 pgsodium_getkey.sh /usr/local/bin/pgsodium_getkey.sh

# Add init scripts while setting permissions
COPY --chmod=755 init-ssl.sh /docker-entrypoint-initdb.d/init-ssl.sh
COPY --chmod=755 init-vault.sh /docker-entrypoint-initdb.d/init-vault.sh
COPY --chmod=755 wrapper.sh /usr/local/bin/wrapper.sh

ENTRYPOINT ["wrapper.sh"]
# Configure pgsodium in shared_preload_libraries and set the getkey script
CMD ["postgres", "-p", "5432", "-c", "listen_addresses=*", "-c", "shared_preload_libraries=pgsodium", "-c", "pgsodium.getkey_script=/usr/local/bin/pgsodium_getkey.sh"]