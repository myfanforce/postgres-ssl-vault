ARG POSTGRES_VERSION=13
FROM postgres:${POSTGRES_VERSION}

# Install OpenSSL, sudo, and build dependencies for pgsodium
RUN apt-get update && apt-get install -y \
    openssl \
    sudo \
    postgresql-server-dev-all \
    build-essential \
    git \
    libssl-dev \
    pkg-config \
    libsodium-dev \
    && rm -rf /var/lib/apt/lists/*

# Install pgsodium extension (provides vault-like functionality)
RUN git clone https://github.com/michelp/pgsodium.git /tmp/pgsodium \
    && cd /tmp/pgsodium \
    && make \
    && make install \
    && cd / \
    && rm -rf /tmp/pgsodium

# Allow the postgres user to execute certain commands as root without a password
RUN echo "postgres ALL=(root) NOPASSWD: /usr/bin/mkdir, /bin/chown, /usr/bin/openssl" > /etc/sudoers.d/postgres

# Add init scripts while setting permissions
COPY --chmod=755 init-ssl.sh /docker-entrypoint-initdb.d/init-ssl.sh
COPY --chmod=755 init-vault.sh /docker-entrypoint-initdb.d/init-vault.sh
COPY --chmod=755 wrapper.sh /usr/local/bin/wrapper.sh

ENTRYPOINT ["wrapper.sh"]
CMD ["postgres", "--port=5432"]